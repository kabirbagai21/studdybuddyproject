  <div class="container mt-5">
  <h1 class="mb-4"><%= @student.name %></h1>
  <h2 class="mb-3"><%= @student.email %></h2>
  <p class="mb-4"><%= @student.bio %></p>

  <div class="mb-4">
    <h3>My Courses</h3>
    <% if @enrolled_courses.present? %>
      <ul class="list-group">
        <% @enrolled_courses.each do |course| %>
          <li class="list-group-item">
            <%= link_to course.name, course %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No enrolled courses</p>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form_with(url: enroll_student_path(@student), method: :post) do |form| %>
      <div class="mb-3">
        <%= form.label :course_id, 'Course ID', class: 'form-label' %>
        <%= form.text_field :course_id, class: 'form-control' %>
      </div>
      <%= form.submit 'Join', class: 'btn btn-primary' %>
    <% end %>
  </div>

  <% flash.each do |type, msg| %>
    <div class="alert alert-info">
      <%= msg %>
    </div>
  <% end %>
</div>
  
